# Database Configuration
DATABASE_PROVIDER="postgresql"
DATABASE_URL="postgresql://user:password@localhost:5432/easytransfer?schema=public"

# For development with SQLite:
# DATABASE_PROVIDER="sqlite"
# DATABASE_URL="file:./dev.db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_WEB_EXPIRATION="1d"
JWT_ANDROID_EXPIRATION="30d"

# Bot Service Token (Static)
BOT_SERVICE_TOKEN="your-static-bot-service-token-change-in-production"

# Server Configuration
PORT=3000
NODE_ENV="development"

# CORS Configuration (for Web UI)
CORS_ORIGIN="http://localhost:3001"

# Telegram Bot Configuration (for OTP delivery)
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
TELEGRAM_INTERNAL_SECRET="your-internal-secret-for-bot-callbacks"
